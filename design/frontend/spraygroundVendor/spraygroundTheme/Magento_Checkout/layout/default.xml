<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
          <referenceBlock name="minicart">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Magento_Checkout::cart/minicart.phtml</argument>
            </action>
            <block class="Magento\Cms\Block\Block" name="minicart.promo">
                <arguments>
                    <argument name="block_id" xsi:type="string">minicart_promo</argument>
                </arguments>
            </block>
          </referenceBlock>
    </body>
</page>
